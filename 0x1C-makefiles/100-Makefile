CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	-$(RM) *~ $(NAME)
	-$(RM) $(filter-out $(SRC), $(wildcard *.c))

oclean:
	-$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

$(OBJ): $(SRC)
	$(CC) $(CFLAGS) -c $(filter %$(subst .o,.c,$(notdir $@)), $(SRC)) -o $@

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(OBJ): m.h

$(NAME): m.h
